  "include": ["src", "src/components/ContactSection.tsx", "src/components/FilterProjects.tsx", "src/components/Header.tsx", "src/components/ProjectCard.tsx", "src/components/ProjectsGrid.tsx", "src/components/SocialIcons.tsx", "src/components/ThemeToggle.tsx"],
  "exclude": ["node_modules"]
}
